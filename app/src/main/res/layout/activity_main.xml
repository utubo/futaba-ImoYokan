<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="アプリやブラウザからURLを共有して開いてください"/>

        <TextView
            style="@style/ghost_button"
            android:id="@+id/catalog"
            android:onClick="onClickLastCatalog"
            android:text="前回のカタログを表示する"/>
        <TextView
            style="@style/ghost_button"
            android:layout_marginTop="16dp"
            android:id="@+id/thread"
            android:onClick="onClickLastThread"
            android:text="前回のスレッドを表示する"/>
        <TextView
            style="@style/ghost_button"
            android:layout_marginTop="16dp"
            android:onClick="onClickSettings"
            android:drawableStart="@drawable/ic_action_settings"
            android:text="設定"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>