<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:requiresFadingEdge="vertical"
        android:gravity="center|top"
        >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/cat_1_1" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_2_1" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_3_1" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_4_1" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_5_1" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_6_1" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_7_1" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_8_1" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_9_1" style="@style/catalog_item" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/cat_1_2" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_2_2" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_3_2" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_4_2" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_5_2" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_6_2" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_7_2" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_8_2" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_9_2" style="@style/catalog_item" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/cat_1_3" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_2_3" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_3_3" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_4_3" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_5_3" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_6_3" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_7_3" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_8_3" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_9_3" style="@style/catalog_item" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/cat_1_4" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_2_4" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_3_4" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_4_4" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_5_4" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_6_4" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_7_4" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_8_4" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_9_4" style="@style/catalog_item" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/cat_1_5" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_2_5" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_3_5" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_4_5" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_5_5" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_6_5" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_7_5" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_8_5" style="@style/catalog_item" />
            <ImageView android:id="@+id/cat_9_5" style="@style/catalog_item" />
        </LinearLayout>
    </LinearLayout>
    <ImageView style="@style/prev_catalog_button"
        android:id="@+id/prev"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:rotation="90" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/catalog_prev_button_size"
        android:layout_alignParentBottom="true">
        <ImageView style="@style/prev_catalog_button"
            android:id="@+id/next"
            android:visibility="visible"
            android:layout_gravity="center|bottom"
            android:rotation="270" />
        <TextView style="@style/text_view"
            android:id="@+id/index"
            android:visibility="visible"
            android:shadowColor="@color/colorBackground"
            android:shadowRadius="5"
            android:shadowDx="0"
            android:shadowDy="0"
            android:gravity="bottom"
            android:layout_gravity="start|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- 1画面あたりの情報量増えすぎなので共有ボタンは無し！
        <ImageView style="@style/share_button" android:id="@+id/share" android:visibility="gone"/>
         -->
    </FrameLayout>
</RelativeLayout>