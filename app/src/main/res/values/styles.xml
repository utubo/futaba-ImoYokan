<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- common -->
    <style name="share_button">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:src">@drawable/ic_share</item>
    </style>

    <!-- Image notification -->
    <dimen name="prev_button_width">64dp</dimen>
    <style name="prev_image_button">
        <item name="android:layout_width">@dimen/prev_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/ic_left</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <!-- Thread notification -->
    <style name="scroll_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- Catalog notification -->
    <style name="catalog_item">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <!-- Main activity -->
    <dimen name="top_page_item_margin">10dp</dimen>

    <style name="top_page_icon_space">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">@dimen/top_page_item_margin</item>
    </style>

    <style name="ghost_button">
        <item name="android:background">@drawable/ghost_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_margin">@dimen/top_page_item_margin</item>
    </style>

    <!-- License activity -->
    <style name="license_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="hr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#DE999999</item>
    </style>

</resources>
