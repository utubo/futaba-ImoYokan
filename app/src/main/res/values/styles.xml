<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorControlNormal">@color/controlColorNormal</item>
    </style>

    <!-- common -->
    <style name="text_view">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="share_button">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:src">@drawable/ic_share</item>
    </style>

    <!-- 「＜」ボタンは背景があるのでtint無し -->
    <style name="prev_button">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:src">@drawable/ic_left</item>
    </style>

    <style name="background_image">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_gravity">end|top</item>
        <item name="android:alpha">0.4</item>
    </style>

    <!-- Image notification -->
    <dimen name="prev_button_width">64dp</dimen>
    <style name="prev_image_button" parent="@style/prev_button">
        <item name="android:layout_width">@dimen/prev_button_width</item>
        <item name="android:src">@drawable/ic_left</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <!-- Thread notification -->
    <style name="scroll_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="replies" parent="@style/text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:breakStrategy">simple</item>
        <item name="android:freezesText">true</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!-- Catalog notification -->
    <dimen name="catalog_item_size">38dp</dimen>
    <style name="catalog_item">
        <item name="android:layout_width">@dimen/catalog_item_size</item>
        <item name="android:layout_height">@dimen/catalog_item_size</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <dimen name="catalog_prev_button_size">28dp</dimen>
    <style name="prev_catalog_button" parent="@style/prev_button">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">@dimen/catalog_prev_button_size</item>
        <item name="android:layout_width">@dimen/catalog_prev_button_size</item>
    </style>

    <!-- Reply-confirm notification -->

    <!-- Main activity -->
    <dimen name="top_page_item_margin">10dp</dimen>

    <style name="top_page_icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">@dimen/top_page_item_margin</item>
        <item name="android:tint">@color/topPageIcon</item>
        <item name="android:alpha">1.4</item>
    </style>

    <style name="ghost_button">
        <item name="android:background">@drawable/ghost_button</item>
        <item name="android:backgroundTint">@color/controlColorNormal</item>
        <item name="android:drawableTint">@color/controlColorNormal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/top_page_item_margin</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- License activity -->
    <style name="license_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="hr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#DE999999</item><!-- めどいのでこれでいいや -->
    </style>

</resources>
